<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/index.css" media="screen"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@800&family=Roboto+Condensed&display=swap" rel="stylesheet">
</head>

<body>

<!-- FIN MENU -->
<%- include("menu2") %>


<div class="contenido row justify-content-center align-items-center">
  <%if(errorMsg !== 0) {%>
    
    
    <div class="alert alert-danger" role="alert">
      <%=errorMsg%>
    </div>
  <% } %>
  <div class="card col-auto" style="max-width: 1080px;">
    <!-- <span class="position-absolute top-0 start-50 translate-middle badge rounded-pill bg-success">
        Puntuacion: <%=pelicula.puntuacion%>
        <span class="visually-hidden">Puntuacion</span>
      </span> -->
      
      <h3> <span class="position-absolute top-0 start-50 translate-middle badge rounded-pill bg-success">Puntuación: <%=pelicula.puntuacion%></span></h3>
     
    <div class="row g-0">
      <div class="col-md-4">
        <div class="containerGridCard">
          
          <article class="information">
            <a class="titleCard" href="#"><%= pelicula.nombre.toUpperCase() %></a>
            <div class="imgCard">
              <a href="#">
            <img src="data:image/jpeg; base64, <%= ((new Buffer(pelicula.img)).toString('base64')) %>" class="img-fluid rounded-start imgCard" alt="...">
              </a>
              </div>

          </article>
          
        </div>
       </div>
       
      <div class="col-md-8">
        <div class="card-body">
            
          <h5 class="card-title"><%=pelicula.nombre%></h5>
          <p class="card-text"><%=pelicula.sinopsis%></p>
          <!-- getFullYear() -->
          <p class="card-text"><small class="text-muted">Año de estreno: <%=pelicula.fechaEstreno.getFullYear()%> | <%=pelicula.duracion%> minutos | <%=pelicula.genero%></small></p>
          
        </div>
        <div class="card-body">
          <h5 class="card-title">Actores</h5>
          <ul class="list-group list-group-flush">
            <% actoresV.forEach(function(actor) { %>
            <li class="list-group-item"><%=actor.nombreAct%> <%=actor.apellidosAct%></li>
            <% }); %>
          </ul>
        </div>

        <form method="post" action="/films/favFilm/<%= pelicula.id %>">
          <input type="submit" class="btn-check" id="btn-check" autocomplete="off">
          <label class="btn btn-warning" for="btn-check"><i class="bi bi-star"></i></label>
        <!-- <i class="bi bi-star-fill"></i> -->
        </form>
      </div>

      
      
    </div>
  </div>
</div>

<!-- <div class="btn-group" role="group" aria-label="Basic example">
  <button type="button" class="btn btn-primary">Left</button>
  <button type="button" class="btn btn-primary">Middle</button>
  <button type="button" class="btn btn-primary">Right</button>
</div> -->
      <!--VISTA COMENTARIOS-->
    <!-- <a class="linkD" href="#"> Ir a Comentarios </a> -->
    <h1 class="strong text-center text-dark mt-5">Comentarios:</h1>
    <div class="row">
      <div class="col col-4 offset-4">
        <% if (comentariosV.length === 0) { %>
          <h2 class="text-center">Sin comentarios</h2>
        <% } else { %> 
          <div class="accordion accordion-flush" id="accordionFlushExample">
            <% comentariosV.forEach(function(comentariosV) { %>
              <span><strong><%=comentariosV.username%></strong></span>
              <span class="date"><%=comentariosV.fecha.toLocaleDateString()%></span><br>
              <%=comentariosV.texto%><br><br>
            <% }); %> 
          </div>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>