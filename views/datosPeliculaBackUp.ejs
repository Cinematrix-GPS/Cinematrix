    <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@800&family=Roboto+Condensed&display=swap" rel="stylesheet">
    
    
</head>


<body>

<!-- FIN MENU -->
<%- include("menu2") %>

<div class="contenido  m-0 vh-100 row justify-content-center align-items-center">
  
   
  <div class="card col-auto" style="max-width: 1080px;">
    <!-- <span class="position-absolute top-0 start-50 translate-middle badge rounded-pill bg-success">
        Puntuacion: <%=pelicula.puntuacion%>
        <span class="visually-hidden">Puntuacion</span>
      </span> -->
      <h3> <span class="position-absolute top-0 start-50 translate-middle badge rounded-pill bg-success">Puntuacion: <%=pelicula.puntuacion%></span></h3>
     
    <div class="row g-0">
      <div class="col-md-4">
        <div class="containerGridCard">
          
          <article class="imgCardContainer">
            <a class="titleCard" href="#"><%= pelicula.nombre.toUpperCase() %></a>
            <div class="imgCard">
              <a href="#">
            <img src="data:image/jpeg; base64, <%= ((new Buffer(pelicula.img)).toString('base64')) %>" class="img-fluid rounded-start imgCard" alt="...">
              </a>
              </div>

          </article>
          
        </div>
       </div>
      <div class="col-md-8">
        <div class="card-body">
            
          <h5 class="card-title"><%=pelicula.nombre%></h5>
          <p class="card-text"><%=pelicula.sinopsis%></p>
          <!-- getFullYear() -->
          <p class="card-text"><small class="text-muted">AÃ±o de estreno: <%=pelicula.fechaEstreno.getFullYear()%> | <%=pelicula.duracion%> minutos | <%=pelicula.genero%></small></p>
          
        </div>
        <div class="card-body">
          <h5 class="card-title">Actores</h5>
          <ul class="list-group list-group-flush">
            <% actoresV.forEach(function(actor) { %>
            <li class="list-group-item"><%=actor.nombreAct%> <%=actor.apellidosAct%></li>
            <% }); %>
          </ul>
        </div>
        
        <form method="post" action="/films/getFilmById/<%= pelicula.id %>" class="row align-items-center mb-5">
          <div class="col col-4">
            <div class="btn-group">
            <!-- <div class="btn-group" role="group" aria-label="Basic example"> -->
            <% for (let i = 0; i < 11; i++) { %>
              <input type="submit" class="btn btn-primary" name="punctuation" value="<%= i %>">
              <!-- <button type="submit" class="btn btn-primary" name="punctuation" value="<%= i %>"><%= i %></button> -->
            <% } %>
            </div>
            <!-- </div> -->
          </div>
          
        </form>
        
        
      </div>

      
     
    </div>
    
   

  </div>
  


</div>



<!-- <div class="btn-group" role="group" aria-label="Basic example">
  <button type="button" class="btn btn-primary">Left</button>
  <button type="button" class="btn btn-primary">Middle</button>
  <button type="button" class="btn btn-primary">Right</button>
</div> -->
      <!--VISTA COMENTARIOS-->
    <!-- <a class="linkD" href="#"> Ir a Comentarios </a> -->
    <% if (comentariosV.length === 0) { %>
      <h2>Sin comentarios</h2>
    <% } else { %>
    <div class="accordion accordion-flush" id="accordionFlushExample">
      
      <% comentariosV.forEach(function(comentariosV) { %>
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
            <strong><%=comentariosV.username%> </strong> <%=comentariosV.fecha.toLocaleDateString()%>
          </button>
        </h2>
        <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample" style="">
          <div class="accordion-body"> <%=comentariosV.texto%></div>
        </div>
      </div> 


      <% }); %> 
    <% } %>
    </div>
   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>