<!DOCTYPE html>
<html lang="es">
  <head>
      <meta charset="UTF-8">
      
      <title><%=title %></title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
      <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
      <script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.9/jquery-ui.js" type="text/javascript"></script>
      <link rel="stylesheet" href="/css/index.css" media="screen"/>
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@800&family=Roboto+Condensed&display=swap" rel="stylesheet">
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
      <script type="text/javascript">
        $(function () {
            $(".keyword").show();
            $(".search").hide();
            $(".title").change(function () {
              var title = $(".title").is(":checked");
                if (title) {
                  $(".search").show();
                  $(".keyword").hide();
                }
                else {
                  $(".search").hide();
                  $(".keyword").show();
                }
            });
        });
    </script>
  </head>
  <body>

    <% include("menu") %>

    <h1><%= title %></h1>
    <div class="row">
        <form action="/films/list" method="POST" class="col col-4">
          <input class="keyword" type="search" name="nombreBuscar" required>
          <button type="submit" class="keyword">Buscar por palabra clave</button>
          <input class="search" type="search" name="titulo" required>
          <button type="submit" class="search">Buscar por título</button>
          <div class="col col-2">
            <label for="type">Título</label>
            <input type="checkbox" class="col col-1 title" id="type" name="title" value="type">
          </div>
        </form>
        <div class="col col-2">
          <h4 class="strong">Búsqueda avanzada</h4>
        </div>
    </div>
    
    <% if (films === 0) { %>
      <h2>Sin coincidencias</h2>
    <% } else { %>
      <% if (typeof(films) !== "undefined") { %>
        <div>
          <h2>Resultados: <%= films.length %></h2>

          <div class="containerGridCard">
          <% films.forEach(function(p) { %>
          
            <article class="imgCardContainer">
          
              <a class="titleCard" href="/films/getFilmById/<%= p.id %>"><%= p.nombre.toUpperCase() %></a>
              <div class="imgCard">
                <a href="#">
                    <img class="portada" width="300" height="169" src="data:image/jpeg; base64, <%= ((new Buffer(p.img)).toString('base64')) %>" alt="<%= p.nombre %>"></a>
              </div>
        
            </article>
          
          <% }); %>
      <% } %>
    <% } %>
  </body>
</html>