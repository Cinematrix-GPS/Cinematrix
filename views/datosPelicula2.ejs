          <p class="card-text"><small class="text-muted">AÃ±o de estreno: <%=pelicula.fechaEstreno.getFullYear()%> | <%=pelicula.duracion%> minutos</small></p>
          
        </div>
        <h5 class="card-title">Actores</h5>
        <ul class="list-group list-group-flush">
            <% actoresV.forEach(function(actor) { %>
            <li class="list-group-item"><%=actor.nombreAct%> <%=actor.apellidosAct%></li>
            <% }); %>
          </ul>
        <div class="card-body">
            <a href="/films/getCommentaries/<%= pelicula.id %>" class="btn btn-primary">Ir a Comentarios</a>
        </div>
        
      </div>
      
